@using Assignment20.Models;
@model IEnumerable<Assignment20.Models.TWEET>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TweetLayout.cshtml";
   // fullname= Session["fullname"];
}




<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8;d-flex justify-content-center" style="background-color:lightgrey;">
          <H3 style="text-align:right;">Welcome  to my Twitter clone</H3>
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2" style="background-color:lightgrey;">
            <span>Welcome @Session["fullname"] </span>
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2;pull-right;" style="background-color:darkseagreen;text-align:right">
          
            <span>@Html.ActionLink("Home", "Edit") |
            @Html.ActionLink("Profile", "Details", "People", routeValues: new{id = Session["UserID"] },htmlAttributes: null)|
            @Html.ActionLink("Sign out", "Login", "People")</span>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3" style="background-color:whitesmoke;">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12" style="background-color:mediumaquamarine;">
                    <div id="imaginary_container">
                        <div class="input-group stylish-input-group">
                            <input type="text" class="form-control" placeholder="Search">
                            <span class="input-group-addon">
                                <button type="submit">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2;pull-right;" style="background-color:darkseagreen;text-align:right">

                    <span>@Html.ActionLink("3", "Edit") Tweets </span>  <br />
                    <span>@Html.ActionLink("3", "Edit")  Following </span>  <br />
                    <span>@Html.ActionLink("3", "Edit")  Followers</span>  <br />

                </div>

            </div>
        </div>
        <div class="col-sm-9 col-md-9 col-lg-9" style="background-color:lightgreen;">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12" style="background-color:lightgrey;">
                    <p>@{Html.RenderAction("Create", "TWEETs");}</p>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-12" style="background-color:darkseagreen;">
                    <p>@{Html.RenderAction("Index", "TWEETs");}</p>
                </div>
                
            </div>
        </div>
      
    </div>
</div>