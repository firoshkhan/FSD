@model Assignment20.Models.PERSON

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="card">
        <fieldset class="the-fieldset " style="border-width:medium">
            <legend class="the-legend">Welcome to my Twitter clone</legend>
            <div class="form-horizontal">
           
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.User_Id, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.User_Id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.User_Id, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.fullname)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group error">
                                 
                            @if(@ViewBag.msg != null)
                            {
                    
                            <label> @ViewBag.msg</label>
                            }
         
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                    <br />

                    <div class="col-md-offset-2 col-md-10">New User?
                        @Html.ActionLink("Sign up", "Create")
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
}

       
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
